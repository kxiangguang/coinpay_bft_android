<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingTop="18dp">

    <LinearLayout
        android:id="@+id/llCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/img_grey"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/style_font_normal"
            android:text="@string/str_create_time"
            android:textColor="@color/font_sec_title"
            android:textSize="@dimen/font_15sp" />

        <TextView
            android:id="@+id/tvCreateTime"
            style="@style/style_font_normal"
            android:textColor="@color/font_main_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llCreate"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLineLeft"
            style="@style/style_horizon_line"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/ivDot"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_grey" />

        <ImageView
            android:id="@+id/ivLineRight"
            style="@style/style_horizon_line"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/ivDot"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>