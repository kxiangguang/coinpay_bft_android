<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llLanguage"
                style="@style/style_layout_my_item"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="visible">

                <TextView
                    style="@style/style_font_normal"
                    android:text="@string/str_my_set_language"
                    android:textColor="@color/font_main_title"
                    android:textSize="@dimen/font_15sp" />


                <TextView
                    style="@style/style_font_normal_weight"
                    android:textColor="@drawable/font_my_info_state_selector" />

                <ImageView style="@style/icon_more" />

            </LinearLayout>

            <View
                style="@style/style_horizon_line"
                android:visibility="visible" />

            <LinearLayout style="@style/style_layout_my_item">

                <TextView
                    style="@style/style_font_normal"
                    android:text="@string/str_my_set_voice"
                    android:textColor="@color/font_main_title"
                    android:textSize="@dimen/font_15sp" />

                <TextView
                    style="@style/style_font_normal_weight"
                    android:textColor="@drawable/font_my_info_state_selector" />

                <ImageView
                    android:id="@+id/ivVoiceOnOff"
                    style="@style/icon_more"
                    android:src="@mipmap/icon_on" />

            </LinearLayout>

            <View style="@style/style_horizon_line" />

            <LinearLayout
                android:id="@+id/llWrite"
                style="@style/style_layout_my_item"
                android:visibility="gone">

                <TextView
                    style="@style/style_font_normal"
                    android:text="@string/str_my_set_code"
                    android:textColor="@color/font_main_title"
                    android:textSize="@dimen/font_15sp" />

                <TextView
                    style="@style/style_font_normal_weight"
                    android:textColor="@drawable/font_my_info_state_selector" />

                <TextView
                    android:id="@+id/tvCode"
                    style="@style/style_font_small_grey"
                    android:text="@string/str_my_set_write_code"
                    android:textColor="@color/bg_btn_normal" />

            </LinearLayout>

            <View
                style="@style/style_horizon_line"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/llPremission"
                style="@style/style_layout_my_item"
                android:visibility="visible">

                <TextView
                    style="@style/style_font_normal"
                    android:text="@string/str_my_set_premission"
                    android:textColor="@color/font_main_title"
                    android:textSize="@dimen/font_15sp" />

                <TextView
                    style="@style/style_font_normal_weight"
                    android:textColor="@drawable/font_my_info_state_selector" />

                <ImageView style="@style/icon_more" />

            </LinearLayout>

            <View
                style="@style/style_horizon_line"
                android:visibility="visible" />

            <LinearLayout
                style="@style/style_layout_my_item"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="visible">

                <TextView
                    style="@style/style_font_normal"
                    android:text="@string/str_my_set_auto_accept"
                    android:textColor="@color/font_main_title"
                    android:textSize="@dimen/font_15sp" />

                <TextView
                    style="@style/style_font_normal_weight"
                    android:textColor="@drawable/font_my_info_state_selector" />

                <ImageView
                    android:id="@+id/ivAutoAcceptOnOff"
                    style="@style/icon_more"
                    android:src="@mipmap/icon_on" />

            </LinearLayout>

            <LinearLayout
                style="@style/style_layout_my_item"
                android:layout_height="30dp"
                android:visibility="visible">

                <TextView
                    style="@style/style_font_small_grey"
                    android:text="@string/str_my_set_auto_accept_tag" />
            </LinearLayout>

            <View
                style="@style/style_horizon_line"
                android:visibility="visible" />

            <LinearLayout
                style="@style/style_layout_my_item"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone">

                <TextView
                    style="@style/style_font_normal"
                    android:text="@string/str_my_set_api_address"
                    android:textColor="@color/font_main_title"
                    android:textSize="@dimen/font_15sp" />

            </LinearLayout>

            <LinearLayout
                style="@style/style_layout_my_item"
                android:layout_height="30dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvApiAddress"
                    style="@style/style_font_small_grey" />

                <TextView
                    style="@style/style_font_normal_weight"
                    android:textColor="@drawable/font_my_info_state_selector" />

                <TextView
                    android:id="@+id/tvCopy"
                    style="@style/style_font_small_grey"
                    android:text="@string/str_copy"
                    android:textColor="@color/bg_btn_normal" />
            </LinearLayout>

            <View
                style="@style/style_horizon_line"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_logout"
        style="@style/style_btn_option_normal"
        android:layout_margin="20dp"
        android:text="@string/str_login_out" />

</LinearLayout>
