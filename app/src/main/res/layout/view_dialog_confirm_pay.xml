<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/shape_bg_white"
        android:orientation="vertical">

        <TextView
            style="@style/style_font_normal_weight"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/str_confirm_pay"
            android:textSize="@dimen/font_lager" />

        <ImageView style="@style/style_horizon_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/dp_10"
            android:text="@string/str_please_confirm"
            android:textColor="@color/font_sec_title"
            android:textSize="@dimen/font_small" />

        <com.spark.modulebase.widget.PayEditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />


        <ImageView
            style="@style/style_horizon_line"
            android:layout_marginTop="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLeft"
                style="@style/style_font_normal_weight"
                android:background="@drawable/ripple_bg_left_bottom_corner_selector"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/str_cancel"
                android:textColor="@color/font_sec_title" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_line" />

            <TextView
                android:id="@+id/tvRight"
                style="@style/style_font_normal_weight"
                android:background="@drawable/ripple_bg_right_bottom_corner_selector"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/str_sure"
                android:textColor="@color/bg_btn_normal" />
        </LinearLayout>
    </LinearLayout>

    <com.spark.modulebase.widget.Keyboard
        android:id="@+id/KeyboardView_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40" />
</LinearLayout>