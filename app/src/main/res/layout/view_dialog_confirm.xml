<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDialogTitle"
        style="@style/style_font_normal_weight"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="title"
        android:textSize="@dimen/font_lager" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/style_font_normal_weight"
        android:gravity="left"
        android:padding="@dimen/dp_20"
        android:text="content"
        android:textColor="@color/font_sec_title" />

    <ImageView style="@style/style_horizon_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLeft"
            style="@style/style_font_normal_weight"
            android:background="@drawable/ripple_bg_left_bottom_corner_selector"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/str_cancel"
            android:textColor="@color/font_sec_title" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bg_line" />

        <TextView
            android:id="@+id/tvRight"
            style="@style/style_font_normal_weight"
            android:background="@drawable/ripple_bg_right_bottom_corner_selector"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/str_sure"
            android:textColor="@color/bg_btn_normal" />
    </LinearLayout>

</LinearLayout>