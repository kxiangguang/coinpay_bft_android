<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_assets_insufficient" />

    <TextView
        style="@style/style_font_normal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/str_commission_insufficient"
        android:textColor="@color/font_main_content"
        android:textSize="@dimen/font_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdd"
            style="@style/style_font_normal"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_add_commission"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/sp_14"
            android:paddingRight="@dimen/sp_14"
            android:paddingTop="@dimen/dp_2"
            android:text="@string/str_add_go"
            android:textColor="@color/bg_btn_normal"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</LinearLayout>