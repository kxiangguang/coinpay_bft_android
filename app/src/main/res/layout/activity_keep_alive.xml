<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/style_font_small_grey"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="@string/str_permission_1"
                android:textColor="@color/font_sec_title" />

            <TextView
                style="@style/style_font_normal_black"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/str_permission_2" />

            <TextView
                style="@style/style_font_small_grey"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="@string/str_permission_3"
                android:textColor="@color/font_sec_title" />

            <TextView
                android:id="@+id/llChinese"
                style="@style/style_font_normal_weight"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_add_commission"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_2"
                android:padding="@dimen/dp_10"
                android:text="@string/str_permission_4"
                android:textColor="@color/bg_btn_normal" />

            <TextView
                style="@style/style_font_normal_black"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/str_permission_5" />

            <TextView
                style="@style/style_font_small_grey"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="@string/str_permission_6"
                android:textColor="@color/font_sec_title" />

            <TextView
                android:id="@+id/llEnglish"
                style="@style/style_font_normal_weight"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_add_commission"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_2"
                android:padding="@dimen/dp_10"
                android:text="@string/str_permission_4"
                android:textColor="@color/bg_btn_normal" />

            <TextView
                android:id="@+id/llHelp"
                style="@style/style_font_small_grey"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="@string/str_permission_7"
                android:textColor="@color/bg_btn_normal" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
