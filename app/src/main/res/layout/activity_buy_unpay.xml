<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout style="@style/layout_my_info">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="bold" />

                <View
                    style="@style/style_horizon_line"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvlimitTime"
                    style="@style/textview_tag"
                    android:text="---"
                    android:textColor="@color/main_font_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@mipmap/img_bg_pay_top"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20">

                <TextView
                    style="@style/style_font_small_grey"
                    android:text="订单金额"
                    android:textColor="@color/bg_main" />

                <TextView
                    android:id="@+id/tvPayMoney"
                    style="@style/style_font_normal"
                    android:text="---"
                    android:textSize="@dimen/font_lager"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_pay_bottom"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    style="@style/style_layout"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="卖家"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvSeller"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

                <LinearLayout
                    style="@style/style_layout"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="单价"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvPrice"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

                <LinearLayout
                    style="@style/style_layout"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="数量"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvAmount"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

                <LinearLayout
                    style="@style/style_layout"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="订单号"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvOrdersn"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

                <LinearLayout
                    style="@style/style_layout"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="备注"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvRemark"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

                <LinearLayout
                    style="@style/style_layout"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="订单时间"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvTime"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

                <LinearLayout
                    style="@style/style_layout"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="付款方式"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />


                    <ImageView
                        android:id="@+id/ivPayWay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/tvPayType"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCopy"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_btn_global_option_corner_selector_grey"
                    android:gravity="center"
                    android:text="取消交易"
                    android:textColor="@color/bg_btn_normal"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tvPayFinish"
                    style="@style/style_btn_option_normal"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:text="去支付" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>