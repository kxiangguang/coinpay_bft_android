<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <LinearLayout
        style="@style/style_layout"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            style="@style/style_font_normal"
            android:text="@string/str_order_num"
            android:textColor="@color/font_main_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tvOrderNum"
            style="@style/style_font_normal_weight"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_small" />

        <ImageView
            android:id="@+id/tvCopyOrderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/icon_copy" />

    </LinearLayout>


    <LinearLayout
        style="@style/style_layout"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            style="@style/style_font_normal"
            android:text="@string/str_pay_num"
            android:textColor="@color/font_main_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tvPayNum"
            style="@style/style_font_normal_weight"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_small" />

        <ImageView
            android:id="@+id/tvCopyPayNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/icon_copy" />

    </LinearLayout>

    <LinearLayout
        style="@style/style_layout"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            style="@style/style_font_normal"
            android:text="@string/str_remark"
            android:textColor="@color/font_main_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tvReamrk"
            style="@style/style_font_normal_weight"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <ImageView
        style="@style/style_horizon_line"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRate"
                style="@style/style_font_normal"
                android:textColor="@color/font_main_title" />

            <TextView
                style="@style/style_font_normal"
                android:layout_marginTop="10dp"
                android:text="@string/str_rate"
                android:textColor="@color/font_main_content"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCdCount"
                style="@style/style_font_normal"
                android:textColor="@color/font_main_title" />

            <TextView
                style="@style/style_font_normal"
                android:layout_marginTop="10dp"
                android:text="@string/str_cd_count"
                android:textColor="@color/font_main_content"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrderTime"
                style="@style/style_font_normal"
                android:textColor="@color/font_main_title" />

            <TextView
                style="@style/style_font_normal"
                android:layout_marginTop="10dp"
                android:text="@string/str_all_value"
                android:textColor="@color/font_main_content"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCanUse"
                style="@style/style_font_normal"
                android:textColor="@color/font_main_title" />

            <TextView
                style="@style/style_font_normal"
                android:layout_marginTop="10dp"
                android:text="@string/str_use_count"
                android:textColor="@color/font_main_content"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>