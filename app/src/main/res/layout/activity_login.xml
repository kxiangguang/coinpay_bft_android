<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:paddingTop="@dimen/dp_20"
        android:text="@string/str_users_login"
        android:textColor="@color/font_main_title"
        android:textSize="@dimen/font_30sp" />

    <TextView
        android:id="@+id/tvSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="25dp"
        android:text="@string/str_users_please_sigh_in_before"
        android:textColor="@color/bg_btn_normal"
        android:textSize="@dimen/font_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/etUsername"
            style="@style/style_edit_login"
            android:hint="@string/str_phone"
            android:inputType="number"
            android:maxLength="11"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_edit_login"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPassword"
                style="@style/style_edit_login"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="@string/str_pwd"
                android:inputType="textPassword"
                android:text="" />

            <ImageView
                android:id="@+id/ivEye"
                style="@style/style_iv_eye"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/llSend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/bg_btn_normal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvForgetPas"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="right"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:text="@string/str_forgot_password"
        android:textColor="@color/font_hint"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/tvLogin"
        style="@style/style_btn_option_normal"
        android:layout_margin="20dp"
        android:text="@string/str_login" />

    <TextView
        android:id="@+id/tvApiAddress"
        style="@style/style_btn_option_normal"
        android:layout_margin="20dp"
        android:text="@string/str_api_address"
        android:visibility="gone" />

</LinearLayout>