<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@mipmap/img_bg_pay_top"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20">

                <TextView
                    style="@style/style_font_small_grey"
                    android:text="订单金额"
                    android:textColor="@color/bg_main" />

                <TextView
                    android:id="@+id/tvPayMoney"
                    style="@style/style_font_normal"
                    android:text="---"
                    android:textSize="@dimen/font_lager"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_pay_bottom"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    style="@style/layout_my_info"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="付款方式"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvMessage"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

                <LinearLayout
                    style="@style/layout_my_info"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="单价"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvAmount"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

                <LinearLayout
                    style="@style/layout_my_info"
                    android:padding="0dp">

                    <TextView
                        style="@style/textview_tag"
                        android:minWidth="90dp"
                        android:text="数量"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        style="@style/edittext_normal"
                        android:layout_weight="1"
                        android:textColor="@color/main_font_content" />

                    <TextView
                        android:id="@+id/tvUse"
                        style="@style/textview_tag"
                        android:text="---"
                        android:textColor="@color/main_font_content" />

                </LinearLayout>

                <View style="@style/style_horizon_line" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPayFinish"
                style="@style/style_btn_option_normal"
                android:layout_margin="20dp"
                android:text="确认购买" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>